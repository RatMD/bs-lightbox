{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": false,
        "baseUrl": ".",
        "lib": [
            "DOM", 
            "DOM.Iterable",
            "ES5", 
            "ES6",
            "ES2016",
            "ES2017",
            "ES2018",
            "ES2019",
            "ES2020"
        ],
        "moduleResolution": "node",
        "newLine": "lf",
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6"
    },
    "exclude": [
        "./rollup.config.js",
        "./dist/*",
        "./docs/*",
        "serve.js"
    ]
